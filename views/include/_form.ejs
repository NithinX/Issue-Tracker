 <!-- form handling -->
 <form action="/issue/addissue" method="POST" id="add_issue">
    <div class="new_issue">
        <div class="form-group">
            <label for="name" class="text-light">Description</label>
            <input type="text" name="description" placeholder="" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="severity" class="text-light">Severity</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="severity" value="Minor" >
                <label for="radio-2" class="radio-label">Minor</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="severity" value="Major" >
                <label for="radio-3" class="radio-label">Major</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="severity" value="Critical" >
                <label for="radio-5" class="radio-label">Critical</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="status" value="Open" >
                <label for="radio-6" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="status" value="In Progress" >
                <label for="radio-7" class="radio-label">In Progress</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-8" name="status" value="Closed" >
                <label for="radio-8" class="radio-label">Closed</label>
            </div>
        </div>

        <div class="form-group">
            <label for="createDate" class="text-light">Create Date</label>
            <input type="date" class="" name="createDate" required>
        </div>

        <div class="form-group">
            <label for="closeDate" class="text-light">Close Date</label>
            <input type="date" class="" name="closeDate" required>
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>